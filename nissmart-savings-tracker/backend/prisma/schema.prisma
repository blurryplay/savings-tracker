generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model SavingsPlan {
  id           String         @id @default(cuid())
  goalName     String
  targetAmount Float
  currentBalance Float       @default(0)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  contributions Contribution[]

  @@map("savings_plans")
}

model Contribution {
  id           String      @id @default(cuid())
  amount       Float
  description  String?
  createdAt    DateTime    @default(now())
  planId       String
  plan         SavingsPlan @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@map("contributions")
}